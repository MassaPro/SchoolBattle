<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout_parametrs_one_device"
        android:layout_width="300dp"
        android:layout_height="472dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">


        <Switch
            android:id="@+id/switch_parametrs_one_device_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="звук"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/switch_parametrs_one_device_1"
            app:layout_constraintEnd_toEndOf="@+id/switch_parametrs_one_device_1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/switch_parametrs_one_device_1" />

        <Button
            android:id="@+id/parametrs_one_device_configuring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#76FF03"
            android:text="   выход в меню   "
            android:textAllCaps="false"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.74" />

        <Switch
            android:id="@+id/switch_parametrs_one_device_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:text="вибрация"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/parametrs_one_device_configuring"
            app:layout_constraintEnd_toEndOf="@+id/parametrs_one_device_configuring"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/parametrs_one_device_configuring" />

        <Button
            android:id="@+id/close_parametrs_one_device"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:text="X"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>