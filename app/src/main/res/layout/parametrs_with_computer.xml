<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/linearLayout_parametrs_with_computer"        android:layout_width="300dp"        android:layout_height="472dp"        android:background="#ffffff"        android:orientation="vertical"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.495"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.498">        <Switch            android:id="@+id/switch_parametrs_computer_2"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginBottom="80dp"            android:text="звук"            android:textSize="25sp"            app:layout_constraintBottom_toTopOf="@+id/switch_parametrs_computer_1"            app:layout_constraintEnd_toEndOf="@+id/switch_parametrs_computer_1"            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toStartOf="@+id/switch_parametrs_computer_1" />        <Button            android:id="@+id/go_to_menu_from_comp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="   выход в меню   "            android:textAllCaps="false"            android:textSize="23sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0.504"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintVertical_bias="0.875" />        <Switch            android:id="@+id/switch_parametrs_computer_1"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginBottom="72dp"            android:text="вибрация"            android:textSize="25sp"            app:layout_constraintBottom_toTopOf="@+id/changeModeWithComputer"            app:layout_constraintEnd_toEndOf="@+id/changeModeWithComputer"            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toStartOf="@+id/changeModeWithComputer" />        <Button            android:id="@+id/close_parametrs_computer"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_marginTop="1dp"            android:layout_marginEnd="1dp"            android:text="X"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="1.0"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintVertical_bias="0.0" />        <Button            android:id="@+id/changeModeWithComputer"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginBottom="52dp"            android:text="смена порядка хода"            app:layout_constraintBottom_toTopOf="@+id/go_to_menu_from_comp"            app:layout_constraintEnd_toEndOf="@+id/go_to_menu_from_comp"            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toStartOf="@+id/go_to_menu_from_comp" />    </androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>